{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Control-BVVM",
  "version": "0.1.0",
  "identifier": "com.controlbvvm.control",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Control BVVM",
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/bvvm64x64.ico",
      "icons/bvvm128x128.ico",
      "icons/bvvm256x256.ico"
    ]
  }
}
